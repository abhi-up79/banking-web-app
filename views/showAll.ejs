<% layout('layouts/boilerplate') %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">AS BANK</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" aria-current="page" href="/">Home</a>
        <a class="nav-link active" href="/show">View All Customers</a>
        <a class="nav-link" href="/history">Payment History</a>
      </div>
    </div>
  </div>
</nav>

<div class="container">
  <h1 class="text-center p-4">All Customers</h1>
  <div class="row pt-5">
    <div class="col-10 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Balance</th>
          </tr>
        </thead>
        <tbody>
          <% var i = 1 %> <% for (user of users) {%>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><a href="/show/<%= user._id %>"><%= user.name %></a></td>
            <td><%= user.email %></td>
            <td><%= user.balance %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
