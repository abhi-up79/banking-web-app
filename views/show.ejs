<% layout('layouts/boilerplate') %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">AS BANK</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" aria-current="page" href="/">Home</a>
        <a class="nav-link" href="/show">View All Customers</a>
        <a class="nav-link" href="/history">Payment History</a>
      </div>
    </div>
  </div>
</nav>

<div class="container">
  <h1 class="text-center p-4">View Customer</h1>
  <div class="row mt-5 pt-3">
    <div class="col-6 offset-3">
      <div class="card">
        <div class="card-header text-uppercase"><%= user.name %></div>
        <div class="card-body">
          <p class="card-text">Email: <%= user.email %></p>
        </div>
        <div class="card-body">
          <p class="card-text">Balance: <%= user.balance %></p>
        </div>
        <div class="card-body text-center">
          <div class="row">
            <a href="/show/<%= user._id %>/transact" class="btn btn-success"
              >Transfer Money</a
            >
          </div>
        </div>
        <div class="card-body text-center">
          <div class="row">
            <a href="/history" class="btn btn-success">View History</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
